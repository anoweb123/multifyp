<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffeee7"
    android:layout_height="match_parent"
    tools:context=".loginpagecustomer">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">
        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/choosepic"
            android:layout_width="match_parent"
            android:layout_height="200dp">
        </ImageView>
            <ImageView
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:layout_width="wrap_content"
                android:layout_margin="16dp"
                android:layout_height="wrap_content">
            </ImageView>

        </RelativeLayout>

        <TextView
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="start"
            android:text="Login"
            android:layout_margin="16dp"
            android:textSize="42sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <com.google.android.material.textfield.TextInputLayout
            android:textColorHint="#9A9A9A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/cardview_light_background"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            app:hintTextColor="@color/colorPrimary"
            app:boxStrokeColor="@color/colorPrimary"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginTop="8dp">
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email">
            </EditText>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            app:boxBackgroundColor="@color/cardview_light_background"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:passwordToggleEnabled="true"
            app:boxStrokeColor="@color/colorPrimary"
            app:hintTextColor="@color/colorPrimary"
            android:textColorHint="#9A9A9A"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/pass"
                android:hint="Password"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:textStyle="bold"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="40dp"
            android:id="@+id/login"
            android:layout_marginRight="40dp"
            android:textSize="18sp"
            android:backgroundTint="#854a99"
            android:text="LOGIN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Button>
        <TextView
            android:layout_margin="8dp"
            android:textColor="#854a99"
            android:layout_gravity="center"
            android:text="Reset password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_margin="8dp"
                android:textColor="#7A7A7A"
                android:text="Don't have an acoount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:textSize="14dp"
                android:layout_margin="8dp"
                android:id="@+id/signup"
                android:textColor="#854a99"
                android:text="Sign up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

        </LinearLayout>

    </LinearLayout>




</androidx.core.widget.NestedScrollView>