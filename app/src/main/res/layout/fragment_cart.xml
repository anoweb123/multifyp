<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.cart">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:background="@drawable/gradient"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/back"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:src="@drawable/ic_baseline_arrow_back_24white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ImageView>
            <TextView
                android:layout_centerInParent="true"
                android:textColor="@color/cardview_light_background"
                android:textSize="22sp"
                android:layout_margin="16dp"
                android:textAlignment="center"
                android:text="My shopping cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_below="@id/toolbar"
            android:layout_above="@id/bottom"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
  <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec"
        android:layout_below="@id/toolbar"
        android:layout_weight="2"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>
                <TextView
                    android:textAlignment="center"
                    android:textColor="#9A9A9A"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:layout_marginTop="12dp"
                    android:text="Details"
                    android:layout_width="match_parent"
                    android:layout_height="20dp">
                </TextView>
        <androidx.cardview.widget.CardView
            android:layout_below="@id/rec"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="6dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <GridLayout
                android:columnCount="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_margin="12dp"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:layout_gravity="center"
                    android:text="Delivery charges"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:text="Rs 200"
                    android:layout_marginRight="8dp"
                    android:textAlignment="viewEnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
                </LinearLayout>
                <LinearLayout
                    android:weightSum="2"
                    android:layout_margin="12dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#000000"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:layout_gravity="center"
                        android:text="Total price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:text="Rs 900"
                        android:id="@+id/totalprice"
                        android:textColor="#000000"
                        android:layout_marginRight="8dp"
                        android:textAlignment="viewEnd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:background="#D3D3D3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp">
                    </View>
                </LinearLayout>
                <LinearLayout
                    android:weightSum="2"
                    android:layout_margin="12dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:layout_gravity="center"
                        android:text="Total payable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:text="Rs 1100"
                        android:id="@+id/totalpayable"
                        android:layout_marginRight="8dp"
                        android:textAlignment="viewEnd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
            </GridLayout>
        </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <androidx.cardview.widget.CardView
            android:backgroundTint="#A46DFF"
            android:id="@+id/bottom"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@drawable/gradient"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="18dp"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center"
                    android:text="Total price "
                    android:textColor="@color/cardview_light_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:textSize="28dp"
                    android:text="$900"
                    android:id="@+id/payable"
                    android:textStyle="bold"
                    android:textColor="@color/cardview_light_background"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <LinearLayout
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <Button
                    android:layout_margin="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="buy now">
                </Button>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</LinearLayout>