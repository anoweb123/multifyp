<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.productfragment">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/fragment"
        android:background="@drawable/gradient"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/menu"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_arrow_back_24white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ImageView>
            <ImageView
                android:layout_marginTop="8dp"
                android:layout_marginRight="20sp"
                android:layout_alignParentRight="true"
                android:id="@+id/cart"
                android:src="@drawable/ic_baseline_shopping_cart_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ImageView>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="8dp"
        android:id="@+id/img"
        android:scaleType="fitXY"
        android:src="@drawable/jacket"
        app:cornerRadius="20dp">
    </ImageView>


            <TextView
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="Leader jacket"
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:textSize="22sp"
                android:textColor="#000000"
                android:text="Rs 1999"
                android:id="@+id/price"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        <TextView
            android:layout_marginTop="6dp"
            android:layout_marginLeft="16dp"
            android:textSize="13sp"
            android:textColor="#9A9A9A"
            android:id="@+id/discount"
            android:text="Rs 1999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
            <TextView
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:textSize="14sp"
                android:textColor="#ae2b2b"
                android:id="@+id/daysleft"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/ic_baseline_access_alarm_24"
                android:text="2 days left at this price"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
"

            <TextView
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:textSize="14sp"
                android:textColor="#000000"
                android:text="Description:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_marginTop="4dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="32dp"
                android:id="@+id/desc"
                android:text="DescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
                android:layout_marginTop="24dp"
                android:layout_marginLeft="16dp"
                android:textSize="16sp"
                android:textColor="#000000"
                android:text="Color: "
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
        <TextView
            android:layout_marginTop="24dp"
            android:layout_marginLeft="16dp"
            android:textSize="16sp"
            android:id="@+id/color"
            android:textColor="#9A9A9A"
            android:text="Red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="6dp"
                android:layout_marginLeft="16dp"
                android:textSize="16sp"
                android:textColor="#000000"
                android:text="Size: "
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
        <TextView
        android:layout_marginTop="6dp"
        android:layout_marginLeft="16dp"
        android:textSize="16sp"
        android:textColor="#9A9A9A"
        android:text="large"
        android:id="@+id/size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>

    </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="6dp"
                android:layout_marginLeft="16dp"
                android:textSize="16sp"
                android:textColor="#000000"
                android:text="left in stock: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
                <TextView
                    android:id="@+id/leftinstock"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="2dp"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:text="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="4dp"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:text=" (Order soon)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>

            <Button
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:text="Buy Now"
                android:id="@+id/buynow"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Button>
    <Button
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:text="Add to Cart"
        android:id="@+id/addtocart"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </Button>
    <Button
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:id="@+id/addtowish"
        android:textAlignment="center"
        android:text="Add to Wishlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </Button>
