<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.checkoutpage">

    <androidx.appcompat.widget.Toolbar
        android:background="@drawable/gradient"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/back"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:src="@drawable/ic_baseline_arrow_back_24white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ImageView>
            <TextView
                android:layout_centerInParent="true"
                android:textColor="@color/cardview_light_background"
                android:textSize="22sp"
                android:layout_margin="16dp"
                android:textAlignment="center"
                android:text="Checkout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_margin="16dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="20dp"
                app:fabSize="mini"
                android:id="@+id/info"
                android:backgroundTint="#fa4248"
                android:layout_height="20dp">
            </com.google.android.material.floatingactionbutton.FloatingActionButton>
                <TextView
                    android:text="Info"
                    android:textSize="16sp"
                    android:layout_below="@+id/info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </RelativeLayout>

            <View
                android:background="#fa4248"
                android:layout_marginBottom="8dp"
                android:layout_width="70dp"
                android:layout_height="1dp">
            </View>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="20dp"
                    app:fabSize="mini"
                    android:id="@+id/pay"
                    android:backgroundTint="#D3D3D3"
                    android:layout_height="20dp">
                </com.google.android.material.floatingactionbutton.FloatingActionButton>
                <TextView
                    android:text="Pay"
                    android:textSize="16sp"
                    android:layout_below="@+id/pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </RelativeLayout>

            <View
                android:background="#fa4248"
                android:layout_marginBottom="8dp"
                android:layout_width="70dp"
                android:layout_height="1dp">
            </View>

            <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="20dp"
                app:fabSize="mini"
                android:id="@+id/sum"
                android:backgroundTint="#D3D3D3"
                android:layout_height="20dp">
            </com.google.android.material.floatingactionbutton.FloatingActionButton>
            <TextView
                android:text="sum"
                android:textSize="16sp"
                android:layout_below="@+id/sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </RelativeLayout>
        </LinearLayout>

        <View
            android:background="#f8f4f3"
            android:layout_width="match_parent"
            android:layout_height="20dp">
        </View>
        <TextView
            android:text=" Basic information"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_margin="8dp"
            android:fontFamily="sans-serif-condensed"
            android:layout_below="@+id/sum"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>


        <com.google.android.material.textfield.TextInputLayout
            android:textColorHint="#9A9A9A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            app:startIconDrawable="@drawable/ic_baseline_person_24"
            android:layout_marginRight="16dp"
            app:hintTextColor="@color/colorPrimary"
            app:boxBackgroundColor="@color/cardview_light_background"
            app:boxStrokeColor="#FFB6C1"
            android:layout_marginTop="8dp">
            <EditText
                android:id="@+id/name"
                android:textCursorDrawable="@drawable/cursorcolor"
                android:layout_width="match_parent"
                android:inputType="textPersonName"
                android:layout_height="wrap_content"
                android:hint="Username">
            </EditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:textColorHint="#9A9A9A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            app:startIconDrawable="@drawable/ic_baseline_email_24"
            android:layout_marginRight="16dp"
            app:hintTextColor="@color/colorPrimary"
            app:boxBackgroundColor="@color/cardview_light_background"
            app:boxStrokeColor="#FFB6C1"
            android:layout_marginTop="8dp">
            <EditText
                android:id="@+id/email"
                android:clickable="false"
                android:inputType="textEmailAddress"
                android:textCursorDrawable="@drawable/cursorcolor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email">
            </EditText>
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:textColorHint="#9A9A9A"
            android:layout_width="match_parent"
            app:startIconDrawable="@drawable/address24"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:hintTextColor="@color/colorPrimary"
            app:boxBackgroundColor="@color/cardview_light_background"
            app:boxStrokeColor="#FFB6C1">
            <EditText
                android:id="@+id/pass"
                android:layout_width="match_parent"
                android:textCursorDrawable="@drawable/cursorcolor"
                android:layout_height="wrap_content"
                android:hint="Address">
            </EditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:textColorHint="#9A9A9A"
            android:layout_width="match_parent"
            app:startIconDrawable="@drawable/ic_baseline_location_city_24"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:hintTextColor="@color/colorPrimary"
            app:boxBackgroundColor="@color/cardview_light_background"
            app:boxStrokeColor="#FFB6C1">
            <EditText
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:textCursorDrawable="@drawable/cursorcolor"
                android:layout_height="wrap_content"
                android:hint="City">
            </EditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:textColorHint="#9A9A9A"
            android:layout_width="match_parent"
            app:startIconDrawable="@drawable/ic_baseline_control_point_24"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:hintTextColor="@color/colorPrimary"
            app:boxBackgroundColor="@color/cardview_light_background"
            app:boxStrokeColor="#FFB6C1">
            <EditText
                android:inputType="textPostalAddress"
                android:id="@+id/postal"
                android:layout_width="match_parent"
                android:textCursorDrawable="@drawable/cursorcolor"
                android:layout_height="wrap_content"
                android:hint="Postal code">
            </EditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:textColorHint="#9A9A9A"
            android:layout_width="match_parent"
            app:startIconDrawable="@drawable/ic_baseline_local_phone_24"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:hintTextColor="@color/colorPrimary"
            app:boxBackgroundColor="@color/cardview_light_background"
            app:boxStrokeColor="#FFB6C1">
            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:textCursorDrawable="@drawable/cursorcolor"
                android:layout_height="wrap_content"
                android:hint="Phone">
            </EditText>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:text="Proceed to Payment"
            app:cornerRadius="32dp"
            android:backgroundTint="#fa4248"
            android:id="@+id/payment"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

        </Button>

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>