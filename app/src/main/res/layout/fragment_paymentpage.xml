<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Fragments.paymentpage">
    <androidx.appcompat.widget.Toolbar
        android:background="@drawable/gradient"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/back"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:src="@drawable/ic_baseline_arrow_back_24white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ImageView>
            <TextView
                android:layout_centerInParent="true"
                android:textColor="@color/cardview_light_background"
                android:textSize="22sp"
                android:layout_margin="16dp"
                android:textAlignment="center"
                android:text="Checkout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_margin="16dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_width="20dp"
                        app:fabSize="mini"
                        android:id="@+id/info"
                        android:backgroundTint="#fa4248"
                        android:layout_height="20dp">
                    </com.google.android.material.floatingactionbutton.FloatingActionButton>
                    <TextView
                        android:text="Info"
                        android:textSize="16sp"
                        android:layout_below="@+id/info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                </RelativeLayout>

                <View
                    android:background="#fa4248"
                    android:layout_marginBottom="8dp"
                    android:layout_width="70dp"
                    android:layout_height="1dp">
                </View>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_width="20dp"
                        app:fabSize="mini"
                        android:id="@+id/pay"
                        android:backgroundTint="#fa4248"
                        android:layout_height="20dp">
                    </com.google.android.material.floatingactionbutton.FloatingActionButton>
                    <TextView
                        android:text="Pay"
                        android:textSize="16sp"
                        android:layout_below="@+id/pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                </RelativeLayout>

                <View
                    android:background="#fa4248"
                    android:layout_marginBottom="8dp"
                    android:layout_width="70dp"
                    android:layout_height="1dp">
                </View>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_width="20dp"
                        app:fabSize="mini"
                        android:id="@+id/sum"
                        android:backgroundTint="#D3D3D3"
                        android:layout_height="20dp">
                    </com.google.android.material.floatingactionbutton.FloatingActionButton>
                    <TextView
                        android:text="sum"
                        android:textSize="16sp"
                        android:layout_below="@+id/sum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                </RelativeLayout>
            </LinearLayout>
            <View
                android:background="#f8f4f3"
                android:layout_width="match_parent"
                android:layout_height="10dp">
            </View>
            <TextView
                android:text="Select Payment method"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_margin="8dp"
                android:fontFamily="sans-serif-condensed"
                android:layout_below="@+id/sum"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_height="wrap_content">

                </com.google.android.material.checkbox.MaterialCheckBox>

                <TextView
                    android:text="Cash on delivery"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:layout_width="wrap_content"
                    android:id="@+id/ssbcheck"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_height="wrap_content">

                </com.google.android.material.checkbox.MaterialCheckBox>

                <TextView
                    android:text="Through SSB account"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ssb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:id="@+id/creditcardcheck"
                    android:layout_marginTop="4dp"
                    android:layout_height="wrap_content">
                </com.google.android.material.checkbox.MaterialCheckBox>

                <TextView
                    android:text="Credit card payment"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/credit"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </LinearLayout>

            <Button
                android:text="PAY"
                app:cornerRadius="32dp"
                android:backgroundTint="#fa4248"
                android:id="@+id/payment"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">

            </Button>


        </LinearLayout>



    </androidx.core.widget.NestedScrollView>
</LinearLayout>